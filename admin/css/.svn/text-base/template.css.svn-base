@CHARSET "ISO-8859-1";
/* Margins da pagina */
* {
	margin: 0px;
	padding: 0px;
}
/* Estilos para o conteudo da pagina */
body {
	font: normal 11px verdana;
}
/* Fundo do menu */
#div-menu {
	background-color: #EEE;
	padding:5px 5px 30px 5px;
	border-bottom: 1px solid #ccc;
}
/* Estilo do carregando */
#mensagemCarregando{
	
	padding: 5px;
	border: 1px solid #000;
	background-color: #ffbfbf;
	color: #000000;
	width: 100px;
	z-index:100;
	margin: 5px 0px 0px 5px;
	position:absolute;
	/*display:block;*/
}
/* Estilos para a div conteudo */
#layout_conteudo{
	padding:10px;
	padding-left: 10px;
	border: 1px solid #EEE;
	overflow: auto;
	height:430px;
}
/* Estilos para o nome da pagina */
#nome_pagina{
	padding: 5px;
	padding-left: 25px;
	font: normal 19px verdana;
	font-weight: bold;
	clear:both;
}
/* Estilos para os botoões da página */
#layout_botoes {
	padding: 5px;
	padding-left: 25px;
	font: normal 9px verdana;
	
	 color: #666;  
	clear:both;
	background-color: #EEE;
	border-bottom: 1px solid #CCC;
	border-top: 1px solid #FFFFFF;
}
#layout_botoes b{
	font: normal 15px verdana;
	color: #E4E4E4;  	
}
#layout_botoes a{
	text-decoration: none;
	color: #000000;
}
#layout_botoes a:hover{
	color: red;
}
/* Css da div do topo do painel administrativo */
#topo_user {
	background:url(../imagens/menu.jpg) repeat-x scroll 0 0;
	border-top:1px solid #000000;
	color:#FFFFFF;
	font-size:11px;
	height:17px;
	padding-left: 15px;
	padding-top: 1px;
}

/* Alinha à esquerda */
#topo_left {
	float: left;
}

/* Alinha à direita */
#topo_right {
	float: 			right;
	padding-right: 	5px;
}

/* css dos links do botão 'sair' */
a.link_sair {
	font: 			11px arial;
	font-family: 	arial;
	font-size:		11px;
	color:			#ffffff;
}
a.link_sair:link {
	font: 			11px arial;
	font-family: 	arial;
	font-size:		11px;	
	text-decoration:none;
}
a.link_sair:hover {
	font: 			11px arial;
	font-family: 	arial;
	font-size:		11px;
	text-decoration:underline;	
}
a.link_sair:visited {
	font: 			11px arial;
	font-family: 	arial;
	font-size:		11px;	
}
a.link_sair:active {
	font: 			11px arial;
	font-family: 	arial;
	font-size:		11px;	
}


